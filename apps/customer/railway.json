{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pnpm install --frozen-lockfile && pnpm db:generate && pnpm --filter @juicebox/customer build"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "pnpm --filter @juicebox/customer start",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 30,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
