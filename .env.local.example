# ============================================
# Juicebox Studios — Environment Variables
# Copy to .env.local and fill in your values
# ============================================

# --- Neon PostgreSQL ---
# Get from: https://console.neon.tech → Project → Connection Details
DATABASE_URL="postgresql://user:password@host/dbname?sslmode=require"
DIRECT_URL="postgresql://user:password@host/dbname?sslmode=require"

# --- Clerk Auth ---
# Get from: https://dashboard.clerk.com → API Keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."
CLERK_SECRET_KEY="sk_test_..."
CLERK_WEBHOOK_SECRET="whsec_..."
# Set to your root domain for subdomain session sharing
CLERK_DOMAIN="juicebox-studios.com"
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"

# --- Stripe ---
# Get from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
# Get from: Stripe Dashboard → Webhooks → Signing secret
STRIPE_WEBHOOK_SECRET="whsec_..."

# --- Resend (Email) ---
# Get from: https://resend.com → API Keys
RESEND_API_KEY="re_..."

# --- Cloudflare R2 (File Storage) ---
# Get from: https://dash.cloudflare.com → R2 → Manage API Tokens
R2_ACCOUNT_ID=""
R2_ACCESS_KEY_ID=""
R2_SECRET_ACCESS_KEY=""
R2_BUCKET_NAME="juicebox-files"

# --- App URLs ---
NEXT_PUBLIC_ADMIN_URL="http://localhost:3000"
NEXT_PUBLIC_CUSTOMER_URL="http://localhost:3001"

# --- Node ---
NODE_ENV="development"
